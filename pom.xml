<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.xored.f4</groupId>
	<artifactId>f4</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<tycho-version>0.10.0</tycho-version>
		<tycho-groupid>org.sonatype.tycho</tycho-groupid>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<modules>
		<!--module>com.xored.f4.astView</module -->
		<!-- Fantom plugins -->
		<module>com.xored.f4.builder</module>
		<module>com.xored.f4.core</module>
		<module>com.xored.f4.debug</module>
		<module>com.xored.f4.debug.ui</module>
		<module>com.xored.f4.fcode</module>
		<module>com.xored.f4.fcode.ui</module>
		<module>com.xored.f4.jdt.launching</module>
		<module>com.xored.f4.jdt.launching.ui</module>
		<module>com.xored.f4.launching</module>
		<module>com.xored.f4.model</module>
		<module>com.xored.f4.parser</module>
		<module>com.xored.f4.search</module>
		<module>com.xored.f4.testing</module>
		<module>com.xored.f4.ui.jdt</module>
		<module>com.xored.f4.ui.text</module>

		<!-- Java plugins -->
		<module>com.xored.fanide.core</module>
		<module>com.xored.fanide.ui</module>

		<!-- Bytecode introspection -->
		<!-- Commented out since this plugin is include to fantom runtime -->
		<!--module>com.xored.fantom.classfile/module -->

		<!-- Packaging -->
		<module>com.xored.f4.feature</module>
		<module>com.xored.f4.site</module>
	</modules>
	<repositories>
		<repository>
			<id>helios</id>
			<layout>p2</layout>
			<url>http://download.xored.com/mirrors/helios/</url>
		</repository>
		<repository>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<id>dltk-core</id>
			<layout>p2</layout>
			<url>http://build.xored.com/browse/DLTK-CORE/latest/artifact/Update-Site</url>
		</repository>
		<repository>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
			<id>fantom</id>
			<layout>p2</layout>
			<url>http://build.xored.com/browse/FAN-NTY/latest/artifact/Update-Site</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
			</plugin>
			<plugin>
				<groupId>${tycho-groupid}</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>${tycho-groupid}</groupId>
				<artifactId>maven-osgi-compiler-plugin</artifactId>
				<version>${tycho-version}</version>
			</plugin>

			<plugin>
				<groupId>org.sonatype.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
