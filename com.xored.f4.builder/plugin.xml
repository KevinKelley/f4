<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
		id="fanerror"
		point="org.eclipse.core.resources.markers"
		name="%marker.fanerror.name">
			<super type="org.eclipse.core.resources.problemmarker"/>
			<super type="org.eclipse.core.resources.textmarker"/>
			<persistent value="true"/>
   </extension>
   <extension
         point="org.eclipse.dltk.core.builder">
      <builder
            class="org.fantom.FanExtension:f4builder::CompileFan"
            nature="com.xored.fanide.core.nature">
      </builder>
   </extension>
   <extension
         point="org.fantom.pod">
      <pod
            location="/f4builder.pod"
            name="f4builder">
      </pod>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
         <initializer
            class="org.fantom.FanExtension:f4builder::BuilderPrefsInitializer">
      </initializer>
   </extension>
</plugin>
