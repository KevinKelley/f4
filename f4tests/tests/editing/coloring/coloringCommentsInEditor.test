Entry-Name: .content

get-view "Fantom Explorer" | get-tree | select "TestProject/fan/A.fan" | double-click -nowait
with [get-editor "A.fan" | get-text-viewer] {
    set-caret-pos 3 2
    key-type Enter
    type-text "// test commi"
    key-type BackSpace
    type-text ent
    key-type "M1+s"
    set-caret-pos 7 11
    type-text "//"
    key-type Left -times 2
    type-text " \""
    key-type Left
    key-type Right
    type-text ")"
    key-type Left -times 3
    type-text "new line"
    key-type Right -times 3
    type-text " "
    key-type Right -times 15
    key-type Enter -times 2
    type-text "/* "
    key-type Enter
    type-text "**"
    key-type Enter
    type-text comments
    key-type "M1+s"
}
with [get-editor "A.fan" | get-text-viewer] {
    set-caret-pos 12 9
    key-type Del -times 3
    key-type "M1+s"
}
with [get-editor "A.fan" | get-editbox] {
    get-property "styles.text" -index 5 | equals "{" | verify-true
    get-property "styles.fontStyle" -index 5 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 5 | equals "#000000" | verify-true
    get-property "styles.text" -index 7 | equals "// test comment\n" | verify-true
    get-property "styles.fontStyle" -index 7 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 7 | equals "#3F7F5F" | verify-true
    get-property "styles.text" -index 9 | equals Void | verify-true
    get-property "styles.fontStyle" -index 9 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 9 | equals "#000000" | verify-true
    get-property "styles.text" -index 22 | equals ")" | verify-true
    get-property "styles.fontStyle" -index 21 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 21 | equals "#000000" | verify-true
    get-property "styles.text" -index 23 | equals "//Hello world\")\n" | verify-true
    get-property "styles.fontStyle" -index 23 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 23 | equals "#3F7F5F" | verify-true
    get-property "styles.text" -index 25 | equals "/* \n"
        + "    **\n"
        + "    ** comments\n"
        + "    * */" | verify-true
    get-property "styles.fontStyle" -index 25 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 25 | equals "#3F7F5F" | verify-true
