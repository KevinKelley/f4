------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Fantom Explorer" | get-menu "Customize View..." | click
with [get-window "Available Customizations"] {
    get-tab-folder | get-tab-item Filters | click
    with [get-table] {
        get-item ".\\* resources" | check
        select ".\\* resources"
    }
    get-button OK | click
}

get-view "Fantom Explorer" | get-tree | select fantest | get-menu "New/Fantom Source Folder" | click
with [get-window "New Source Folder"] {
    get-editbox -after [get-label "Folder name:"] | set-text test
    get-button Finish | click
}
with [get-view "Fantom Explorer" | get-tree] {
    get-item fantest | get-property caption | equals fantest | verify-true
    get-item fantest | get-property childCount | equals 7 | verify-true
    get-item "fantest/Fantom Native Libraries \\(Java\\)" | get-property caption 
        | equals "Fantom Native Libraries (Java)" | verify-true
    get-item "fantest/JRE System Library.*" | get-property caption | equals "JRE System Library.*" 
        | verify-true
    get-item "fantest/fan" | get-property caption | equals fan | verify-true
    get-item "fantest/test" | get-property caption | equals test | verify-true
    get-item "fantest/build.fan" | get-property caption | equals "build.fan" | verify-true
    get-item "fantest/fantest.pod" | get-property caption | equals "fantest.pod" | verify-true
    get-item "fantest/Interpreter Libraries.*" | get-property caption 
        | equals "Interpreter Libraries.*" | verify-true
}
get-view "Fantom Explorer" | get-tree | select "fantest/build.fan" | double-click -nowait
get-editor "build.fan" | get-editbox | get-property value 
    | equals "using buildclass Build : build::BuildPod{  new make()  {    podName = \"fantest\"    summary = \"\"    outPodDir = `./`    srcDirs = [`test/`, `fan/`]    depends = [\"sys 1.0\"]  }}" 
    | verify-true
------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac--
